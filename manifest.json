{
  "manifest_version": 2,
  "name": "Personal Cloud Search Assistant (MVP)",
  "version": "0.1.0",
  "description": "Personal Cloud Search Assistant (Firefox-compatible MV2)",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications",
    "alarms",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Personal Search"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
